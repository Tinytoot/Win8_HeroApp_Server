<div class="row-fluid sortable ui-sortable">
	<div class="box span9">
		<div class="box-header well" data-original-title="">
			<h2><i class="icon-font"></i> Issue Details</h2>
		</div>
		<div class="box-content">
			  <div class="page-header">
				  <h1>
				  		{{issue.title}} 
				  		{{#issue.hidden}}<small>This issue is not approved</small>{{/issue.hidden}}{{^issue.hidden}}<small>This issue is approved</small>{{/issue.hidden}}
				  </h1>
			  </div>     
			  <div class="row-fluid ">            
				  <div class="span12">
					<h3>Description</h3>
					<div class="pull-right"><img src="/api/hero/issue/{{issue._id}}/image" /></div>
					<p>{{issue.description}}
					
				  </div>
			  </div><!--/row -->                           
			
			  <div class="row-fluid">
				  <div class="span12">
					<h2>Comments:</h2>
					<ul class='dashboard-list'>
						{{#issue.comments}}
							<li style="min-height: 80px;">
									
									<a href="#">
										<img class="dashboard-avatar" alt="{{userName}}" src="{{userProfilePicUrl}}"></a>
										{{text}}
									    <div class="pull-right"><strong>Name:</strong> {{userName}} <strong>@</strong> {{dt}} [<a href="#" class="delete-comment" data-issueId='{{issue.id}}' data-id="{{id}}">delete</a>] [<a href="#" class="toggle-comment" data-id="{{id}}" data-issueId='{{issue.id}}' data-ishidden="{{hidden}}">{{#hidden}}approve{{/hidden}}{{^hidden}}unapprove{{/hidden}}</a>] 
								</li>
						{{/issue.comments}}
						{{^issue.comments}}
							<h4>No Comments</h4>
						{{/issue.comments}}
					</ul>                               
				  </div>
			  </div>	 
		  </div>
	</div><!--/span-->
	
	<div class="box span3">
		<div class="box-header well" data-original-title="">
			<h3>Commands</h3>
		</div>
		<div class="box-content">
			<ul>
			  <li><a id="toggle-issue" href="#" data-id="{{issue._id}}" data-ishidden="{{issue.hidden}}">
			  	{{#issue.hidden}}Approve Issues{{/issue.hidden}}{{^issue.hidden}}Unapprove Issue{{/issue.hidden}}
			  </a></li>
			  <li><a id="delete-issue" href="#" data-id="{{issue._id}}">Delete Issue</a></li>
			</ul>            
		</div>
	</div><!--/span-->
	
	<div class="box span3">
		<div class="box-header well" data-original-title="">
			<h3>Location</h3>
		</div>
		<div class="box-content">
			 <img src="http://dev.virtualearth.net/REST/v1/Imagery/Map/Road/{{issue.latitude}},{{issue.longitude}}/10?mapSize=500,500&pp={{issue.latitude}},{{issue.longitude}};34&mapVersion=v1&key=AvOW5Fz4QTsubTTdmaVnseeZnAQ0JYwbx_6zdMdgHk6iF-pnoTE7vojUFJ1kXFTP" />
		</div>
	</div><!--/span-->
	
	
	
	

</div>